<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <com.coui.appcompat.textview.COUITextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/breathing_light_color_tips"
        android:textColor="@color/coui_color_secondary_neutral"
        android:textSize="12sp" />

    <com.coui.appcompat.tablayout.COUITabLayout
        android:id="@+id/tab_layout"
        style="@style/COUISmallTabLayoutStyle"
        android:layout_marginTop="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/circle_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

</LinearLayout>